{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "variables": {
        "singleWebAppNameTidy": "[toLower(trim(parameters('singleWebAppName')))]"

    },
    "parameters": {
        "deploymentId": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]"
          },
          "singleWebAppName": {
            "type": "string",
            "defaultValue": "[concat(parameters('deploymentId'), '-single')]"
          },
      "profileName": {
        "type": "string",
        "metadata": {
          "description": "Name of the CDN Profile"
        },
        "defaultValue": "[concat(parameters('deploymentId'), '-cdn')]"
      },
      "endpointName": {
        "type": "string",
        "metadata": {
          "description": "Name of the CDN Endpoint"
        },
        "defaultValue": "[concat(parameters('deploymentId'), '-endpoint')]"
      },
      "originName": {
        "type": "string",
        "metadata": {
          "description": "Name of the Origin"
        },
        "defaultValue": "[concat(parameters('deploymentId'), '-cdn')]"
      },
      "originUrl": {
        "type": "string",
        "metadata": {
          "description": "Url of the origin"
        },
        "defaultValue": "[concat(toLower(trim(parameters('singleWebAppName'))), '.azurewebsites.net')]"
      },
      "CDNSku": {
        "type": "string",
        "metadata": {
          "description": "CDN SKU names"
        },
        "defaultValue": "Standard_Microsoft",
        "allowedValues": [
          "Standard_Akamai",
          "Standard_Verizon",
          "Premium_Verizon",
          "Standard_Microsoft"
        ]
      },
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata": {
          "description": "Location for all resources."
        }
      }
    },
    "resources": [
      {
        "name": "[parameters('profileName')]",
        "type": "Microsoft.Cdn/profiles",
        "location": "[parameters('location')]",
        "apiVersion": "2016-04-02",
        "sku": {
          "name": "[parameters('CDNSku')]"
        },
        "resources": [
          {
            "apiVersion": "2016-04-02",
            "dependsOn": [
              "[resourceId('Microsoft.Cdn/profiles', parameters('profileName'))]"
            ],
            "location": "[parameters('location')]",
            "name": "[parameters('endpointName')]",
            "type": "endpoints",
            "properties": {
              "originHostHeader": "[parameters('originUrl')]",
              "isHttpAllowed": true,
              "isHttpsAllowed": true,
              "queryStringCachingBehavior": "UseQueryString",                
              "origins": [
                {
                  "name": "[parameters('originName')]",
                  "properties": {
                    "hostName": "[parameters('originUrl')]"
                  }
                }
              ]
            }
          }
        ]
      }
    ]
  }