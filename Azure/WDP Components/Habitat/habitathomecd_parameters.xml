<parameters>
  <parameter name="Application Path" tags="iisapp">
    <parameterEntry type="ProviderPath" scope="iisapp" match="WebSite" />
  </parameter>
  <parameter name="Core Admin Connection String" tags="Hidden, SQLConnectionString, NoStore">
    <parameterEntry type="ProviderPath" scope="dbDacFx" match="core.dacpac" />
  </parameter>
  <parameter name="Master Admin Connection String" tags="Hidden, SQLConnectionString, NoStore">
    <parameterEntry type="ProviderPath" scope="dbDacFx" match="master.dacpac" />
  </parameter>
  <parameter name="Demo Dynamics CRM Connection String" description="Connection string for Dynamics CRM" tags="SQL, Hidden,NoStore" defaultValue="default_crm_string">
    <parameterValidation kind="AllowEmpty" />
    <parameterEntry kind="XmlFile" scope="App_Config\\ConnectionStrings\.config\.xdt$" match="//connectionStrings/add[@name='democrmdynamics']/@connectionString" />
  </parameter>
  <parameter name="Demo CRM SalesForce Connection String" description="Connection string for Dynamics CRM SalesForce connector" tags="SQL, Hidden,NoStore" defaultValue="default_salesforce_string">
    <parameterValidation kind="AllowEmpty" />  
    <parameterEntry kind="XmlFile" scope="App_Config\\ConnectionStrings\.config\.xdt$" match="//connectionStrings/add[@name='democrmsalesforce']/@connectionString" />
  </parameter>
  <parameter name="Enable EXM module" description="Enable or disable the EXM module" tags="Hidden,NoStore" defaultValue="false">
    <parameterValidation kind="AllowEmpty" />  
    <parameterEntry kind="XmlFile" scope="web\.config\.xdt$" match="//configuration/appSettings/add[@key='exmEnabled:define']/@value" />
  </parameter>
  <parameter name="Allow Invalid SSL Certificate" description="Allows the use of self-signed certificates for communication with XConnect" tags="Hidden,NoStore" defaultValue="true">
    <parameterValidation kind="AllowEmpty" />
    <parameterEntry kind="XmlFile" scope="web\.config\.xdt$" match="//configuration/appSettings/add[@key='AllowInvalidClientCertificates']/@value" />
  </parameter>
  <parameter name="Environment Type" description="Define the environment (Local or Production) - this affect some configuration settings" tags="Hidden,NoStore" defaultValue="Production">
    <parameterValidation kind="AllowEmpty" />
    <parameterEntry kind="XmlFile" scope="web\.config\.xdt$" match="//configuration/appSettings/add[@key='env:define']/@value" />
  </parameter>
  <parameter name="Unicorn On/Off" description="Turn Unicorn functionality on or off" tags="Hidden,NoStore" defaultValue="Off">
    <parameterValidation kind="AllowEmpty" />
    <parameterEntry kind="XmlFile" scope="web\.config\.xdt$" match="//configuration/appSettings/add[@key='unicorn:define']/@value" />
  </parameter>
  <parameter name="3rd Party Integrations" description="3rd-party integrations like CDN, Dynamics, Salesforce, Facebook, MS" tags="Hidden,NoStore" defaultValue="CND">
    <parameterValidation kind="AllowEmpty" />
    <parameterEntry kind="XmlFile" scope="web\.config\.xdt$" match="//configuration/appSettings/add[@key='integrations:define']/@value" />
  </parameter>
  <parameter name="ASP.NET Debugging" description="Turn debugging on or off for the environment" tags="Hidden,NoStore" defaultValue="false">
    <parameterValidation kind="AllowEmpty" />
    <parameterEntry kind="XmlFile" scope="web\.config\.xdt$" match="//configuration/system.web/compilation/@debug" />
  </parameter>  
  <parameter name="CDN Enabled" description="Enable or disable CDN" tags="Hidden,NoStore" defaultValue="true">
    <parameterValidation kind="AllowEmpty" />
    <parameterEntry kind="XmlFile" scope="App_Config\\Include\\Foundation\\Foundation\.CDN\.config$" match="//configuration/sitecore/settings/setting[@name='CDN.Enabled']/@value" />
  </parameter>
  <parameter name="Media/Always Include Server URL" description="Enable or disable Media URL display behavior" tags="Hidden,NoStore" defaultValue="">
    <parameterValidation kind="AllowEmpty" />
    <parameterEntry kind="XmlFile" scope="App_Config\\Include\\Foundation\\Foundation\.CDN\.config$" match="//configuration/sitecore/settings/setting[@name='Media.AlwaysIncludeServerUrl']/patch:attribute[@name='value']/text()" />
  </parameter>
  <parameter name="Media/Link Server URL" description="URL to the media server (if any)" tags="Hidden,NoStore" defaultValue="">
    <parameterValidation kind="AllowEmpty" />
    <parameterEntry kind="XmlFile" scope="App_Config\\Include\\Foundation\\Foundation\.CDN\.config$" match="//configuration/sitecore/settings/setting[@name='Media.MediaLinkServerUrl']/patch:attribute[@name='value']/text()" />
  </parameter>
  <parameter name="Media Response/Cacheability type" description="The type of cacheability of the media files on remote or proxy servers - private or public" tags="Hidden,NoStore" defaultValue="private">
    <parameterValidation kind="AllowEmpty" />
    <parameterEntry kind="XmlFile" scope="App_Config\\Include\\Foundation\\Foundation\.CDN\.config$" match="//configuration/sitecore/settings/setting[@name='MediaResponse.Cacheability']/patch:attribute[@name='value']/text()" />
  </parameter>
  <parameter name="Demo Enabled" description="Enable or disable the demo mode" tags="Hidden,NoStore" defaultValue="true">
    <parameterValidation kind="AllowEmpty" />
    <parameterEntry kind="XmlFile" scope="App_Config\\Include\\Feature\\Feature\.Demo\.config$" match="//configuration/sitecore/settings/setting[@name='Demo.Enabled']/@value" />
  </parameter>
  <parameter name="Root Host Name" description="Habitat Home hostname" tags="Hidden,NoStore" defaultValue="">
    <parameterValidation kind="AllowEmpty" />
    <parameterEntry kind="XmlFile" scope="App_Config\\Include\\Project\\Common\.Website\.config$" match="//configuration/sitecore/sc.variable[@name='rootHostName']/@value" />
  </parameter>
  <parameter name="Analytics Cookie Domain" description="Analytics cookie domain name" tags="Hidden,NoStore" defaultValue="">
    <parameterValidation kind="AllowEmpty" />
    <parameterEntry kind="XmlFile" scope="App_Config\\Include\\Project\\Common\.Website\.config$" match="//configuration/sitecore/settings/setting[@name='Analytics.CookieDomain']/@value" />
  </parameter>
</parameters>